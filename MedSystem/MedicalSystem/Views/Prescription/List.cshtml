@model List<MedicalSystem.ViewModels.PrescriptionVM>
@{
    ViewData["Title"] = "Prescription";
}
<h2>Prescriptions</h2>

<a asp-action="Create" asp-route-oib="@((Model.Any() ? Model.First().PatientOIB : ViewBag.PatientOIB))" class="btn btn-success mt-3">
    New Prescription
</a>


<table class="table table-bordered">
    <thead>
        <tr><th>Drug</th><th>Dosage</th><th>Date</th></tr>
    </thead>
    <tbody>
        @foreach (var prescription in Model)
        {
            <tr>
                <td>@prescription.DrugName</td>
                <td>@prescription.Dose</td>
                <td>@prescription.Date.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" asp-controller="PatientDashboard" asp-route-oib="@((Model.Any() ? Model.First().PatientOIB : ViewBag.PatientOIB))" class="btn btn-primary">Go back to Dashboard</a>