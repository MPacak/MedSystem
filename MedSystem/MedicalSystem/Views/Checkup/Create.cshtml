@model MedicalSystem.ViewModels.CheckupVM
@{
    ViewData["Title"] = "Schedule a Checkup";
}


<body>
<h2>Schedule a Checkup</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="PatientOIB" />

    <div class="mb-3">
        <label class="form-label">Checkup Type</label>
        <select asp-for="Type" asp-items="ViewBag.CheckupTypes" class="form-select">
            <option value="">-- Select Checkup Type --</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Date and Time</label>
        <input asp-for="DateTime" id="dateTimePicker" class="form-control" />
        <span asp-validation-for="DateTime" class="text-danger"></span>
    </div>
     
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" asp-route-oib="@Model.PatientOIB" class="btn btn-secondary">Cancel</a>
</form>
</body>
<script>
    flatpickr("#dateTimePicker", {
        enableTime: true,
        dateFormat: "Y-m-d H:i",
        time_24hr: true,
        defaultDate: "today",
        minDate: "today",
         minTime: "07:00",
           maxTime: "21:00"
    });
</script>