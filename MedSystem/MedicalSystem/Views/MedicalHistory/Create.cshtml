@model MedicalSystem.ViewModels.MedicalHistoryVM
@{
    ViewData["Title"] = "Add Medical History";
}

<h2>Add Medical History</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="PatientOIB" />

    <div class="mb-3">
        <label class="form-label">Disease Name</label>
        <select asp-for="DiseaseName" asp-items="ViewBag.Diseases" class="form-select" >
        <option value="">-- Select Disease --</option>

        </select>
        <span asp-validation-for="DiseaseName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Start Date</label>
        <input asp-for="StartDate" id="dateTimePicker" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    @* <input type="hidden" asp-for="StartDate"  /> *@
    <input type="hidden" asp-for="EndDate"  />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" asp-route-oib="@Model.PatientOIB" class="btn btn-secondary">Cancel</a>
</form>
<script>
    flatpickr("#dateTimePicker", {
        dateFormat: "Y-m-d",
        defaultDate: "today",
        maxDate: "today"
    });
</script>
